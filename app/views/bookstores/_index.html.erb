<h1>Listing bookstores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookstores.each do |bookstore| %>
      <tr>
        <td><%= bookstore.name %></td>
        <td><%= link_to 'Show', bookstore,:remote => true %></td>
        <td><%= link_to 'Edit', edit_bookstore_path(bookstore) ,:remote => true%></td>
        <td><%= link_to 'Destroy', bookstore,:remote => true, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

